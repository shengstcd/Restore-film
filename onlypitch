%malesiz


reset(ads2)
lenDataTrain2 = length(ads2.Files);
features2 = cell(lenDataTrain2,1);
for i = 1:lenDataTrain2
    [dataTrain2, infoTrain3] = read(ads2);
    features2{i} = HelperComputePitchAndMFCC(dataTrain2,infoTrain3);
end
features2 = vertcat(features2{:});
